@page "/counter"
@page "/counter/{startingValue:int}"
@inject OrderState orderState

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>
<h2>Mensaje Pagina: @orderState.MensajePagina</h2>
<input @bind="orderState.MensajePagina" @bind:event="oninput" />

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    [Parameter]
    public int StartingValue { get; set; } = 0;

    [Parameter]
    public int ValorIncremental { get; set; } = 1;

    private void IncrementCount()
    {
        currentCount += StartingValue;
    }
}
